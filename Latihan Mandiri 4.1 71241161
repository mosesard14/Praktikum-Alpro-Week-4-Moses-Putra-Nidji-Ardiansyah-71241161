Implementasi kesalahan input pengguna dari contoh 4.1
try:
  suhu = int(input("Masukkan suhu tubuh: "))
  if suhu >= 38:
    print("Anda demam")
  else:
    print("Anda tidak demam")
except:
  print("Anda tidak Memasukkan angka")

Implementasi kesalahan input pengguna dari contoh 4.2
try:
  bilangan = int(input("Masukkan suatu bilangan: "))
  if bilangan > 0:
    print("Positif")
  elif bilangan < 0:
    print("Negatif")
  elif bilangan == 0:
    print("Nol")
except:
  print("Anda tidak memasukkan angka")

Implementasi kesalahan input pengguna dari contoh 4.3
try:
    # input a, b dan c
  a = int(input("Masukkan bilangan pertama: "))
  b = int(input("Masukkan bilangan kedua: "))
  c = int(input("Masukkan bilangan ketiga: "))
  # secara berurutan tulis kriteria untuk a, b, dan c
  if a > b and a > c:
    print("Terbesar: ", a)
  elif b > a and b > c:
   print("Terbesar: ", b)
  elif c > a and c > b:
   print("Terbesar: ", c)
except:
  print("Anda tidak memasukkan angka")
